        {
          "datasource": {
            "type": "postgres",
            "uid": "PostgreSQL"
          },
          "editorMode": "code",
          "format": "table",
          "rawQuery": true,
          "rawSql": "SELECT\n  COALESCE(\n    ROUND(AVG(EXTRACT(EPOCH FROM (resolved_at - detected_at)) / 60)::numeric, 1),\n    0\n  ) AS \"Avg Resolution (min)\"\nFROM alert_history\nWHERE resolved = true\n  AND detected_at >= NOW() - INTERVAL '24 hours';",
          "refId": "A"
        }
      ],
      "title": "Avg Resolution Time",
      "type": "stat"
