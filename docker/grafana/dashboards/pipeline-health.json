      "pluginVersion": "10.2.0",
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "TimescaleDB"
          },
          "editorMode": "code",
          "format": "table",
          "rawQuery": true,
          "rawSql": "SELECT COUNT(*) AS \"Readings (Last 1min)\"\nFROM sensor_readings\nWHERE time >= NOW() - INTERVAL '1 minute';",
          "refId": "A"
        }
      ],
      "title": "Readings Written (Last 1min)",
      "type": "stat"
    },
    {
