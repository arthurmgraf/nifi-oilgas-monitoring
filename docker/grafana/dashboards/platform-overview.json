          "editorMode": "code",
          "format": "time_series",
          "rawQuery": true,
          "rawSql": "SELECT\n  bucket AS time,\n  platform_id AS metric,\n  SUM(reading_count) AS \"readings\"\nFROM sensor_1min_agg\nWHERE bucket >= NOW() - INTERVAL '1 hour'\nGROUP BY bucket, platform_id\nORDER BY bucket;",
