# =============================================================================
# NiFi Oil & Gas Monitoring Platform - Environment Configuration
# =============================================================================
# Copy this file to .env.dev, .env.staging, or .env.prod and fill in values.
# NEVER commit .env.dev/.env.staging/.env.prod to git!
# =============================================================================

# --- NiFi Configuration ---
NIFI_WEB_PORT=8443
NIFI_USERNAME=admin
NIFI_PASSWORD=CHANGE_ME_nifi_password_min_12_chars
NIFI_SENSITIVE_KEY=CHANGE_ME_random_string_min_12_chars
NIFI_HEAP_INIT=1g
NIFI_HEAP_MAX=2g

# --- NiFi Registry ---
NIFI_REGISTRY_PORT=18080

# --- Kafka ---
KAFKA_BROKER_PORT=9092
KAFKA_INTERNAL_PORT=29092
KAFKA_SASL_USERNAME=nifi
KAFKA_SASL_PASSWORD=CHANGE_ME_kafka_password

# --- Schema Registry ---
SCHEMA_REGISTRY_PORT=8081

# --- PostgreSQL (Reference Data) ---
PG_REF_HOST=postgres
PG_REF_PORT=5432
PG_REF_DATABASE=refdata
PG_REF_USERNAME=nifi
PG_REF_PASSWORD=CHANGE_ME_pg_password
PG_REF_ADMIN_PASSWORD=CHANGE_ME_pg_admin_password

# --- TimescaleDB (Time-Series) ---
TSDB_HOST=timescaledb
TSDB_PORT=5433
TSDB_DATABASE=sensordb
TSDB_USERNAME=nifi
TSDB_PASSWORD=CHANGE_ME_tsdb_password
TSDB_ADMIN_PASSWORD=CHANGE_ME_tsdb_admin_password

# --- MinIO (Data Lake) ---
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_minio_password
MINIO_ACCESS_KEY=nifi-service
MINIO_SECRET_KEY=CHANGE_ME_minio_secret

# --- Grafana ---
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_grafana_password

# --- Prometheus ---
PROMETHEUS_PORT=9090

# --- Mosquitto (MQTT) ---
MQTT_PORT=1883
MQTT_WS_PORT=9883
MQTT_USERNAME=nifi
MQTT_PASSWORD=CHANGE_ME_mqtt_password

# --- Data Generator ---
GENERATOR_MQTT_BROKER=mosquitto
GENERATOR_MQTT_PORT=1883
GENERATOR_NIFI_HTTP_URL=https://nifi:8443/api/v1/sensor-data
GENERATOR_PLATFORMS=ALPHA,BRAVO,CHARLIE,DELTA,ECHO
GENERATOR_INTERVAL_SECONDS=2
GENERATOR_ANOMALY_PROBABILITY=0.05
